+    nsAutoWeakMenuObject<nsMenu> weakMenu(this);
+
+    if (NS_FAILED(timer->InitWithFuncCallback(DoOpen, weakMenu.getWeakPtr(),
+                                              100, nsITimer::TYPE_ONE_SHOT))) {
+        return;
+    }
