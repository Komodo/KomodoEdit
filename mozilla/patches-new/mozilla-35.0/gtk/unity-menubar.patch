+void
+nsMenu::Build()
+{
+    nsMenuUpdateBatch batch(this);
+
+    SetNeedsRebuild(false);
+
+    while (ChildCount() > 0) {
+        RemoveChildAt(0);
+    }
+
+    InitializePopup();
+
+    if (!mPopupContent) {
+        return;
